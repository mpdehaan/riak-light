#!/usr/bin/env ruby

require 'rake/gempackagetask'
require 'jeweler'

Jeweler::Tasks.new do |s|
    s.name = "riak_light"
    s.rubyforge_project = "riak_light"
    s.summary = "Lightweight ruby binding for Riak"
    s.email = "michael@puppetlabs.com"
    s.homepage = "http://github.com/mpdehaan/riak-light"
    s.description = "Riak Light is a lightweight binding for Riak.  It does not require specific versions of ActiveStuff"
    s.authors = ["Michael DeHaan"]
    s.files = FileList["[A-Z]*.*", "lib/**/*"]
    s.add_dependency('curb')
    s.add_dependency('json')
end


